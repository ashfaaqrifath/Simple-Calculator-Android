<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="59dp"
        android:fontFamily="sans-serif-black"
        android:text="Simple Calculator"
        android:textColor="#FB1C0A"
        android:textColorLink="#9C27B0"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/et_number2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_number1"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:hint="First value"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_display"
        app:layout_constraintEnd_toStartOf="@+id/et_number2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name1" />

    <EditText
        android:id="@+id/et_number2"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="46dp"
        android:ems="10"
        android:hint="Second value"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_number1"
        app:layout_constraintTop_toBottomOf="@+id/Name1" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="31dp"
        android:onClick="addButtonTapped"
        android:text="Add"
        android:textColorLink="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/btn_add3"
        app:layout_constraintEnd_toStartOf="@+id/btn_add2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_number1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="429dp"
        android:fontFamily="sans-serif-black"
        android:outlineAmbientShadowColor="#FD0101"
        android:outlineSpotShadowColor="#FA1000"
        android:text="Result"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_number1" />

    <Button
        android:id="@+id/btn_add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="31dp"
        android:onClick="subButtonTapped"
        android:text="Sub"
        app:layout_constraintBottom_toTopOf="@+id/btn_add4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add"
        app:layout_constraintTop_toBottomOf="@+id/et_number2" />

    <Button
        android:id="@+id/btn_add3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="263dp"
        android:onClick="multiplyButtonTapped"
        android:text="Multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add" />

    <Button
        android:id="@+id/btn_add4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="272dp"
        android:onClick="devideButtonTapped"
        android:text="Devide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add3"
        app:layout_constraintTop_toBottomOf="@+id/btn_add2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="31dp"
        android:text="Copyright Â© Ashfaaq Rifath - SA23089754"
        android:textColor="#858585"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add4" />

</androidx.constraintlayout.widget.ConstraintLayout>